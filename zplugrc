source $ZPLUG_HOME/init.zsh

zplug "zplug/zplug", defer:1

zplug "dekz/prompt", use:prompt.zsh, defer:10
zplug "dekz/dotfiles", use:"scripts/*.sh", defer:10

zplug "junegunn/fzf-bin", \
    from:gh-r, \
    as:command, \
    rename-to:fzf, \
    use:"*16*${(L)$(uname -s)}*amd64*"

zplug "junegunn/fzf", use:shell/key-bindings.zsh, defer:10

zplug "stedolan/jq", \
    from:gh-r, \
    as:command, \
    rename-to:jq

zplug "zsh-users/zsh-syntax-highlighting", defer:1
zplug "rupa/z", use:z.sh, defer:1

if ! zplug check --verbose; then
  printf "Install? [y/N]: "
  if read -q; then
      echo; zplug install
  fi
fi

zplug load
