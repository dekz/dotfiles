source ~/.zplug/init.zsh

zplug "zplug/zplug", nice:1

zplug "dekz/prompt", use:prompt.zsh, nice:10
zplug "dekz/dotfiles", use:scripts/*.sh, nice:10

zplug "junegunn/fzf-bin", \
    from:gh-r, \
    as:command, \
    rename-to:fzf, \
    use:"*darwin*amd64*"

zplug "junegunn/fzf", use:shell/key-bindings.zsh, nice:10

zplug "stedolan/jq", \
    from:gh-r, \
    as:command, \
    rename-to:jq

zplug "zsh-users/zsh-syntax-highlighting", nice:1
zplug "supercrabtree/k"
zplug "rupa/z", use:z.sh, nice:1

if ! zplug check --verbose; then
  printf "Install? [y/N]: "
  if read -q; then
      echo; zplug install
  fi
fi

zplug load
